Algoritmo "Area de um triangulo"
// Disciplina   : [Linguagem e Lógica de Programação]

Var
   base, altura, area:real


Inicio
   escreval("Digite um valor= ")
   leia(base)
   escreval("Digite outro valor= ")
   leia(altura)

   area <- (base * altura)/2

   escreval("base =", base)
   escreval("altura =", altura)
   escreval("area =", area)

Fimalgoritmo